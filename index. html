<script>
// FREE HASHTAG TOOL
function freeHashtags(){
  let text = document.getElementById("freeInput").value;
  let words = text.split(",");
  let tags = [];

  words.forEach(w=>{
    w = w.trim().replace(/\s+/g,'');
    if(w){
      tags.push("#"+w);
      tags.push("#"+w+"2026");
      tags.push("#"+w+"love");
    }
  });

  document.getElementById("freeResult").innerText = tags.join(" ");
}

// AI HASHTAG TOOL (Backend required)
async function aiHashtags(){
  let text = document.getElementById("aiInput").value;

  document.getElementById("aiResult").innerText = "Generating AI hashtags...";

  const res = await fetch("/ai-hashtags",{
    method:"POST",
    headers:{ "Content-Type":"application/json" },
    body: JSON.stringify({ text })
  });

  const data = await res.json();
  document.getElementById("aiResult").innerText = data.hashtags;
}
</script>

